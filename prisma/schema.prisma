generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  clients   Client[] // Relacionamento com clientes vinculados ao vendedor
}

model Client {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  phone     String
  sellerId  Int?     // Relaciona o cliente ao vendedor
  seller    User?    @relation(fields: [sellerId], references: [id]) // ReferÃªncia ao vendedor no modelo User
  createdAt DateTime @default(now())
}

enum Role {
  ADMIN
  SELLER
  USER
}
